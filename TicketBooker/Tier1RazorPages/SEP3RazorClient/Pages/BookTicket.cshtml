@page
@model BookTicketModel
@{
    ViewData["Title"] = "BookTicket";
}



<h1>Movie Schedule</h1>
@if(@Model.Schedule != null)
{
int count = Model.Schedule.Count;

<form method = "post" asp-action="Pick">
    <h1>Monday</h1>
    @for (int i = 0; i < count; i++)
    {
        @if(@Model.Schedule.ElementAt(i).Day.Equals("Monday"))
        {
        <input type="radio" name="Movie" value="@i" checked>@Model.Schedule.ElementAt(i).ToString()<br>
        }
